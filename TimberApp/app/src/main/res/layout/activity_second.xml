<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity" android:background="#3F51B5">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/welcome"
            android:layout_marginBottom="20pt"
            android:textColor="@color/white"
            android:text="@string/nothing_to_see"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/welcome"
            android:textColor="@color/white"
            android:text="@string/welcome_timber"
            android:textSize="16pt"/>

    <Button
            android:text="@string/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/welcome"
            android:layout_marginTop="20pt"
            android:textColor="@color/white"
            android:backgroundTint="@color/reddish"
            android:id="@+id/signOutBtn"/>

    <Button
            android:text="@string/write_to_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30pt"
            android:layout_below="@id/signOutBtn"
            android:layout_marginTop="10pt"
            android:textColor="@color/black"
            android:backgroundTint="@color/reddish"
            android:id="@+id/writeDBBtn"/>

    <Button
            android:text="@string/read_from_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30pt"
            android:layout_below="@id/signOutBtn"
            android:layout_marginTop="10pt"
            android:textColor="@color/black"
            android:backgroundTint="@color/reddish"
            android:id="@+id/readDBBtn" android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:text="@string/db_message"
            android:ems="10"
            android:id="@+id/db_msg"
            android:visibility="invisible"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/writeDBBtn"
            android:layout_marginTop="10dp"/>

</RelativeLayout>